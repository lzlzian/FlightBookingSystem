<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textAdmView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="Please select from the following options:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="20dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/uploadFlightList"
        android:onClick="logOut"
        android:text="Logout" />

    <Button
        android:id="@+id/viewClientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewBookedItineraries"
        android:onClick="viewClientList"
        android:text="Edit Clients" />

    <Button
        android:id="@+id/viewBookedItineraries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/viewPersonalInfo"
        android:onClick="viewBookedItineraries"
        android:text="View Booked Itineraries" />

    <Button
        android:id="@+id/viewPersonalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/searchItineraries"
        android:onClick="viewPersonalInfo"
        android:text="View Personal Info" />

    <Button
        android:id="@+id/editFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/viewClientList"
        android:onClick="viewFlightList"
        android:text="Edit Flights" />

    <Button
        android:id="@+id/uploadFlightList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="uploadFlightList"
        android:text="Upload File"
        android:layout_below="@+id/editFlight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/searchFlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textAdmView"
        android:onClick="searchFlights"
        android:text="Search Flight" />

    <Button
        android:id="@+id/searchItineraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/searchFlights"
        android:onClick="searchItineraries"
        android:text="Search Itinerary" />

</RelativeLayout>
</ScrollView>